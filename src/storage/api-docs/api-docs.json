{
    "openapi": "3.0.0",
    "info": {
        "title": "Products API",
        "version": "1.0.0"
    },
    "paths": {
        "/api/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Получить список товаров",
                "description": "Возвращает пагинированный список товаров с возможностью фильтрации и сортировки",
                "operationId": "ab015cc2055ac75e6d23c628675c26e7",
                "parameters": [
                    {
                        "name": "filters",
                        "in": "query",
                        "description": "Параметры фильтрации",
                        "required": false,
                        "explode": true,
                        "schema": {
                            "$ref": "#/components/schemas/ProductFilterDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ProductFilterDTO": {
                "title": "Фильтр товаров",
                "description": "Параметры фильтрации и сортировки товаров",
                "properties": {
                    "q": {
                        "description": "Поисковый запрос по названию товара",
                        "type": "string",
                        "nullable": true
                    },
                    "priceFrom": {
                        "description": "Минимальная цена",
                        "type": "number",
                        "format": "float",
                        "example": 100,
                        "nullable": true
                    },
                    "priceTo": {
                        "description": "Максимальная цена",
                        "type": "number",
                        "format": "float",
                        "example": 1000,
                        "nullable": true
                    },
                    "categoryId": {
                        "description": "ID категории",
                        "type": "integer",
                        "example": 1,
                        "nullable": true
                    },
                    "inStock": {
                        "description": "Фильтр по наличию на складе",
                        "type": "boolean",
                        "example": true,
                        "nullable": true
                    },
                    "ratingFrom": {
                        "description": "Минимальный рейтинг",
                        "type": "number",
                        "format": "float",
                        "example": 4,
                        "nullable": true
                    },
                    "sort": {
                        "description": "Параметр сортировки",
                        "type": "string",
                        "enum": [
                            "price_asc",
                            "price_desc",
                            "rating_desc",
                            "newest"
                        ],
                        "example": "price_desc",
                        "nullable": true
                    },
                    "page": {
                        "description": "Номер страницы для пагинации",
                        "type": "integer",
                        "default": 1,
                        "example": 1
                    },
                    "perPage": {
                        "description": "Количество товаров на странице",
                        "type": "integer",
                        "default": 15,
                        "example": 15
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Products",
            "description": "Products catalog"
        }
    ]
}